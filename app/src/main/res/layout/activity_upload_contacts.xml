<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="will.subtexting.UploadContactsActivity">

    <ProgressBar
        android:id="@+id/activity_upload_contacts_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="100dp"
        android:indeterminate="true"
        android:visibility="gone"/>

    <Button
        android:id="@+id/activity_upload_contacts_upload_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:layout_alignParentBottom="true"
        android:onClick="upload"/>

    <ListView
        android:id="@+id/activity_upload_contacts_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/activity_upload_contacts_upload_btn"></ListView>

</RelativeLayout>
